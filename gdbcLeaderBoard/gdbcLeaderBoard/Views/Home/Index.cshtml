@model gdbcLeaderBoard.Models.HomeViewModels.ScoreOverviewViewModel
@{ 
    ViewData["Title"] = "Home";
}

<div class="row">
    <h2 class="lbtitle">@Model.Title</h2>
    <ul class="lb">
        @for (int i = 0; i < Model.VenueScores.Count; i++)
        {
        <li class="lbitem">
            <div class="lbrank">@(i + 1)</div>
            @if (Model.SortOnAverage)
            {
                <div class="lbscore">@Model.VenueScores[i].avgScore</div>
            }
            else
            {
                <div class="lbscore">@Model.VenueScores[i].Score</div>
            }
            <div class="lbteam"><a href="/Home/Teams?Id=@Model.VenueScores[i].Venue">@Model.VenueScores[i].Venue</a></div>
            @if (@Model.VenueScores[i].nrTeams == 1)
            {
                <div class="lbteam" align="right">@Model.VenueScores[i].nrTeams team</div>
            }
            else
            {
                <div class="lbteam" align="right">@Model.VenueScores[i].nrTeams teams</div>
            }
        </li>
        }
    </ul>
</div>

<script>
    setTimeout("location.reload(true);", 60000);
</script>