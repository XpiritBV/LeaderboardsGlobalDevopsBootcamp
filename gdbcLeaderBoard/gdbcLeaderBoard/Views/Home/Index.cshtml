@model gdbcLeaderBoard.Models.HomeViewModels.ScoreOverviewViewModel

<div class="row">
    <h2 class="lbtitle">Top 5 Venues</h2>
    <ul class="lb">
        @for (int i = 0; i < Model.VenueScores.Count; i++)
        {
            <li class="lbitem">
                <div class="lbrank">@(i + 1)</div>
                <div class="lbscore">@Model.VenueScores[i].Score</div>
                <div class="lbteam"><a href="/Home/Teams?Id=@Model.VenueScores[i].Venue">@Model.VenueScores[i].Venue</a></div>
            </li>
        }
    </ul>
</div>

<div class="row">
    <h2 class="lbtitle">Top 5 Teams</h2>
    <ul class="lb">
        @for (int i = 0; i < Model.TeamScores.Count; i++)
        {
            <li class="lbitem">
                <div class="lbrank">@(i+1)</div>
                <div class="lbscore">@Model.TeamScores[i].Score</div>
                <div class="lbteam">@Model.TeamScores[i].Team </div>
                <div class="lbvenue"><a href="/Home/Teams?Id=@Model.TeamScores[i].Venue">@Model.TeamScores[i].Venue</a></div>
            </li>
        }
    </ul>
</div>
<script>
    setTimeout("location.reload(true);", 60000);
</script>